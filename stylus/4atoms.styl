widerthan(var)
   condition = 'screen and (min-width: %s)' % var
   @media condition
      {block}

narrowerthan(var) 
   condition = 'screen and (max-width: %s)' % var
   @media condition
      {block}

/* ////////////////GLOBAL GRID 
 */
.f-wrap
    flex-wrap: wrap
.flex-b 
    display: flex
    align-items: baseline
.grid
    display: grid
    // box-sizing: border-box
.img-grid
    display: grid
    box-sizing: border-box
    grid-template-columns: repeat(auto-fill,minmax(1fr,50%))
.x2c
    // grid-template-columns: 50% 50%
    // grid-template-columns: repeat(autofit,minmax())
    // columns: 5rem 2  
    grid-gap: calc(4*var(--d-space))
    grid-column-gap:var(--d-space)
    justify-content: center
    
    // h3
    overflow hidden
.x24c
    grid-template-columns repeat(24,1fr)
.x18c
    grid-template-columns repeat(18,minmax(0,1fr))
.x20c
    grid-template-columns repeat(20,minmax(5px,1fr))
.x12c
    grid-template-columns repeat(12, 1fr)
    margin-left: var(--d-space)
    margin-right: var(--d-space)
    grid-gap: calc(var(--space));
    +narrowerthan(600px)
        margin-left: var(--space)
        margin-right: var(--space)
        grid-gap: calc(var(--space));
    

    // grid-template-rows repeat(auto-fit,minmax(1px,auto))
.span-col  
    grid-column: 1/ span all
._1rem 
    grid-gap: 1rem
._2rem 
    grid-gap: 2rem
._3rem 
    grid-gap: 3rem
._4rem 
    grid-gap: 4rem

