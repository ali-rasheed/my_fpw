#project
   // * 
      // max-width 100vw
   margin-left: 0vw 
   margin-right: 0vw
   grid-row-gap: 1rem
   margin-top: 5rem


h2
   margin-top: .7em
   margin-bottom: .3em
h3
   margin-top 1.5rem  
   margin-bottom: .3em

figure 
   margin: 1rem 0 2rem 0
   flex-wrap: wrap     
   max-width 100vw
   width: 100%                  

   figcaption 
      width: 100%
      margin-top:  0.5rem
      +narrowerthan(500px)
         padding: .5rem calc(100vw/12)

   img
      object-fit: cover   
      display: block
      margin-left: auto
      margin-right: auto

section 
   margin-bottom: 2rem
   overflow: none
   +narrowerthan(500px)
      margin-bottom: 0

p
   align-self: start 
   margin-top: 0
   margin: 0 
   max-width 50ch
   // margin-bottom: .4em


.callout 
   min-height: 50vh
   padding: 7rem 0
   display: grid
   grid-template-columns: repeat(12, 1fr)
   grid-template-rows: 2

   // justify-content: center
   // align-content: center
   background-color: var(--txtcol)
   filter: contrast(90%)
   *
      grid-column: 3/-3
      color: var(--bgcol)
      +narrowerthan(500px)
         grid-column: 2/-2
   h4
      margin-top: auto
      grid-column: 2/-3



#overview

   #cover-image
      img
         object-fit: cover
         height 100%
         width: 100%
         max-height: 88vh
      grid-column: 1/all
      margin: 0
      
   h1 
      grid-column: 2/span all
      margin 0
      align-self: end
      height: min-content
      display inline
      

   #summary
      grid-column: 4/-2

   +narrowerthan(1400px)
            
      #summary
            grid-column: 2/-2
   


iframe
   min-height: 70vh   
   max-height: 80vh
   width 100%


h2, h3,h4,h5,h6
   grid-column-end:  all

.l-sect    
   grid-column-start: 2
.ml-sect 
   grid-column-start: 3
.m-sect
   grid-column-start: 4
.mr-sect
   grid-column-start: 5
.r-sect
   grid-column-start: 6


.l-sect
.r-sect
.ml-sect
.m-sect
.mr-sect
   grid-column-end: -2




+narrowerthan(500px)
   .l-sect, .ml-sect, .m-sect, .mr-sect, .r-sect
      grid-column-end: -2
      grid-column-start: 2


figure, iframe 
   &.l-sect
   // &.ml-sect
   // &.m-sect
   &.mr-sect
      grid-column-end: span 9
      +narrowerthan(1400px)
         grid-column: 2/-2 
      +narrowerthan(500px)
         grid-column: 2/-2

   &.m-sect
      grid-column: 4/-4

   &.ml-sect 
      grid-column: 3/span 4


   &.lr-sect
      grid-column 1/-1
      +narrowerthan(500px)
         grid-column: 1/-1

   &.mlmr-sect             
      grid-column 3/-3


   &.mlmr-sect             
      grid-column 3/-3

      +narrowerthan(1400px)
         grid-column: 2/-2 
      +narrowerthan(500px)
         grid-column: 1/-1

   &.r-sect 
      grid-column: span 5/-2
      grid-row: 1/15
      +narrowerthan(500px)
         grid-column: 2/-2
         grid-row: inherit


   img
      max-width: 100vw  
      width 100%

h2,h3,h4 
   &.l-sect
   &.ml-sect
   &.m-sect
   &.mr-sect
   &.r-sect
      grid-column-end: span all

.flex-i

   .flex-b 
      // margin 1rem 0
      justify-content: start   
   h6
      margin-bottom: 1em
      margin-top: 2em 
   
.flex-s 
   display: flex
   flex-wrap: wrap
   &.points
      
      justify-content: space-evenly

      +narrowerthan(500px)
         .flex-i
            flex-basis: 100%
 
      li,a,p
         font-size: 1.3rem 
         opacity: 80% 
         &:hover, &:focus
            opacity: 100%
   +narrowerthan(500px)
      margin 0 calc(100vw/12) 