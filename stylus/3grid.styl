widerthan(var)
   condition = 'screen and (min-width: %s)' % var
   @media condition
      {block}

narrowerthan(var)
   condition = 'screen and (max-width: %s)' % var
   @media condition
      {block}

/* ////////////////GLOBAL GRID 
 */
.flex-b 
    display: flex
.grid
    display: grid
    box-sizing: border-box
.x2c
    grid-template-columns: 1fr 1fr
.x24c
    grid-template-columns repeat(24,1fr)
.x18c
    grid-template-columns repeat(18,minmax(3%,6%))
.x12c
    grid-template-columns repeat(12,minmax(1fr,7%))
.span-col  
    grid-column: 1/ span all
._1rem 
    grid-gap: 1rem
/* /////////////NAV POSITIONING
 */
main#about
    grid-auto-rows: min-content
    grid-template-columns: repeat(auto-fill, minmax(400px,1fr))
    margin: 20vh 20vw 2rem 10vw 
    // grid-template-columns:  repeat(18,minmax(50px,1fr))
    // grid-template-rows: repeat(8,minmax(5%,10%))
    // min-height: 40vh
    grid-gap: 2rem

    h1,h2,h3,h4,h5 
        margin 0
    h1
        // grid-column: 2/span 2
        // grid-row: span 2
        // grid-column: 3/span all
    
    section
        // grid-column-start: span 2
        // grid-column: span   
        p,li
            max-width:  400px
        
    img.prof
        // grid-column: 15/13
        // grid-row: 1/3
        object-fit: cover 
        width: 100%
        max-width: 8rem
    aside
        // grid-column: 16/11
        // grid-row: 4/7
    ul
        list-style-position: inside;
        // list-style-image: 

#project
    margin-left: 4vw
    margin-right: 4vw
    grid-gap: 1rem

    +narrowerthan(1550px)
        margin-left: 2vw
        margin-right: 2vw
        margin-top: 4rem
    +narrowerthan(1000px)
        margin-right: 8vw
        margin-left: 8vw
    figure
        // margin: 0
    h2,h3
        margin: 0
    
    section 
        margin-bottom: 5rem
        overflow: none
        grid-gap: 1rem
        p
            margin-top: 0
    #intro-sect
        #cover-image
            grid-row: 1/span 1
            grid-column: 8/18
            margin: 0
            height: 100%
            // max-height: 75vh
            
        .main-heading 
            grid-row:2/span 1
            grid-column: 2/span all
            margin 0
            align-self: end
            height: min-content
            display inline
        #summary
            grid-row: 3/span 1
            grid-column: 2/span 6
            +narrowerthan(1850px)
                grid-column-end: span 8
        +narrowerthan(1000px)
            .main-heading,#summary
                grid-column-start:1
            #summary
                grid-column-end: span 10
            #cover-image
                grid-column-end: 19
        +narrowerthan(850px)
            .main-heading,#summary
                grid-column-start:1
            #summary
                grid-column-end: span all
            #cover-image
                grid-column-end: 19
                grid-column-start: 1
                
                
    .l-sect,.r-sect,.ml-sect,.mr-sect,.m-sect
        align-self: end
  
    h2, h3
        grid-column-end: span 10
        +narrowerthan(1000px)
            grid-column-end: span 8
        +narrowerthan(900px) 
            grid-column-end: span 10 
        +narrowerthan(850px)
            grid-column-end: span all

    h2,h3,p,figure, #hierarchy div , div, ul
        &.l-sect    
            grid-column-start: 2
        &.ml-sect
            grid-column-start: 4
        &.m-sect
            grid-column-start: 7
        &.mr-sect
            grid-column-start: 9
        &.r-sect
            grid-column-start: 11
        +narrowerthan(1000px)
            &.l-sect    
                grid-column-start: 1
            &.ml-sect
                grid-column-start: 3
            &.m-sect
                grid-column-start: 6
            &.mr-sect
                grid-column-start: 10
            &.r-sect
                grid-column-start: 12
        +narrowerthan(900px)   
            &.l-sect    
                grid-column-start: 1
            &.ml-sect
                grid-column-start: 1
            &.m-sect
                grid-column-start: 4
            &.mr-sect
                grid-column-start: 9
            &.r-sect
                grid-column-start: 9  
        +narrowerthan(850px)
            &.l-sect    
            &.ml-sect
            &.m-sect
            &.mr-sect
            &.r-sect
                grid-column-start: 4
    p , #hierarchy div , div, ul
        &.l-sect
            grid-column-end: span 6
        &.r-sect
            grid-column-end: span 6
        &.ml-sect
            grid-column-end: span 6
        &.m-sect
            grid-column-end: span 6 
        &.mr-sect
            grid-column-end: span 6
    +narrowerthan(1000px)
        p 
            &.l-sect
                grid-column-end: span 7
            &.r-sect
                grid-column-end: span 7
            &.ml-sect
                grid-column-end: span 8
            &.m-sect
                grid-column-end: span 7
            &.mr-sect
                grid-column-end: span 7

    +narrowerthan(1300px)
        p
            grid-column-end:  span 7
    +narrowerthan(900px)
        p 
            &.l-sect
                grid-column-end: span 9
            &.r-sect
                grid-column-end: span 9
            &.ml-sect
                grid-column-end: span 9
            &.m-sect
                grid-column-end: span 9
            &.mr-sect
                grid-column-end: span 9 
    +narrowerthan(850px)
        p  
            &.l-sect
            &.r-sect
            &.ml-sect
            &.m-sect
            &.mr-sect
                grid-column-end: span 12

    figure.l-sect 
    figure.r-sect
    figure.ml-sect
    figure.mr-sect
        grid-column-end: span 7
    figure.m-sect 
        grid-column-end span 8
        grid-column-start: 6
    +narrowerthan(900px)
        figure.l-sect 
        figure.r-sect
        figure.ml-sect
        figure.mr-sect
            grid-column-end: span 10
        figure.m-sect 
            grid-column-end span 10
            grid-column-start: 5
        // figure.r-sect 
            // grid-column-start: 11 
    +narrowerthan(850px)
        figure.l.sect,
                figure.l-sect 
        figure.r-sect
        figure.ml-sect
        figure.mr-sect
        figure.m-sect 
            grid-column-start: 2
            grid-column-end: 18