widerthan(var)
   condition = 'screen and (min-width: %s)' % var
   @media condition
      {block}

narrowerthan(var)
   condition = 'screen and (max-width: %s)' % var
   @media condition
      {block}

/* ////////////////GLOBAL GRID 
 */
.flex-b 
    display: flex
.grid
    display: grid
    box-sizing: border-box
.x2c
    grid-template-columns: 1fr 1fr
.x24c
    grid-template-columns repeat(24,1fr)
.x18c
    grid-template-columns repeat(18,minmax(0,1fr))
.x12c
    grid-template-columns repeat(12,minmax(1fr,7%))
.span-col  
    grid-column: 1/ span all
._1rem 
    grid-gap: 1rem
._2rem 
    grid-gap: 2rem
._3rem 
    grid-gap: 3rem
._4rem 
    grid-gap: 4rem
    
