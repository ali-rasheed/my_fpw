   flex-wrap: wrap     
   max-width 100vw
   width: 100%                  

   figcaption 
      width: 100%
      margin-top:  0.5rem
      +narrowerthan(500px)
         padding: .5rem calc(100vw/12)

   img
      object-fit: cover   
      display: block
      margin-left: auto
      margin-right: auto
   video
        width 100%
        height: 100%

section 
   // margin-bottom: 2rem
   overflow: none
   +narrowerthan(500px)
