.slick-next, .slick-prev
   // font-size: 0
   font-family: "Font Awesome 5 Pro"
   width: 50%
   position absolute
   top: 0
   z-index: 5
   transition: opacity ease-out 100ms
   background: black
   height 100%
   opacity 0  
   +narrowerthan(1400px)
      top: 50%
      z-index: 5
      border-radius: 0.3rem
      padding: 0.3rem
      margin 0.3rem
      width: 5rem
      border-radius: 0.3rem
      font-weight: bold            
      padding: 0.3rem
      margin 0.3rem
      
      &::after 
         font-size: .9rem
         opacity 50%
         font-size: 2.2rem
         color: var(--tcol)

      &:hover::after , &&:focus:after
         opacity 100%

.slick-next
   right 0 
   left auto

   &::after 
      content ""  



.slick-prev
   left: 0
   right auto
   &::after 
      content ""
      
.slick-dots
   display: flex
   justify-content: center
   margin-top: -1.75em
   position relative
   li
      font-size: 0
      // vi
      line-height: unset
      margin: 0 .75rem
      &:before 
         color: var(--pcol)
         margin .25rem
         font-size: .9rem 
         font-family: "Font Awesome 5 Pro"
         content "\f111"
         // opacity 50% 
         font-weight: 300
      &.slick-active:before      
         opacity 100%
         font-weight: 900
         color: var(--pcol)

