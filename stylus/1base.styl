
/*
-------------------VARIABLES------------------
*/
:root
    --magenta: hsl(298, 100%, 56%) 
    --magenta:#FF2079
    --magenta-rgba: rgba(255, 32, 121,0.6)
    --purple-rgba:rgba(222, 38, 249,0.5)
    --grey:hsl(0,0%,20%)
    --white:hsl(0, 0%, 98%);
    --black:hsl(137,47%, 6%)
    --dark-white: hsl(336, 2%, 92%)
    --light-black: hsl(204, 2, 17%)

    
    --bg-col: var(--white)
    --txt-col: var(--black)
    --sy-col: var(--purple)
    --py-col: var(--magenta)
    --py-col-rgb: 255,32,121;

    --mobileP: 400px
    --mobileL: 768px
    --laptopMDPI: 1280px
    --laptopHiDPI: 1440px

    --p-std-font: "Mazius Display Regular"
    --s-std-font: "Space Grotesk"
    --t-std-font: "Mazius Display Italic"
    --q-std-font: "Mazius Display Extra Italic"

    --p-std-weight: normal
    --s-std-weight: bold
    --fa-primary-color: var(--text-col)
    --fa-secondary-color: var(--magenta-rgba) 
    --fa-secondary-opacity: 1
/*------------DARK MODE------------*/
[data-theme = "dark"]
    --bg-col: var(--light-black)
    --txt-col: var(--dark-white) 
    
@media screen and (prefers-color-scheme: light)
    --bg-col: var(--white)
    --txt-col: var(--black)
@media screen and (prefers-color-scheme: dark)
    --bg-col: var(--light-black)
    --txt-col: var(--dark-white) 