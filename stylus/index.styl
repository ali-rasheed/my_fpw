widerthan(var)
    condition = 'screen and (min-width: %s)' % var
    @media condition
        {block}

narrowerthan(var)
    condition = 'screen and (max-width: %s)' % var
    @media condition
        {block}

.index
    main
        grid-template-columns: 1fr  

        grid-gap: 7rem
        +widerthan(1300px)
            grid-column-gap: 4rem
            grid-row-gap: 3rem
            grid-template-columns: 1fr 1fr 1fr  
            margin-top: 2rem
        display: grid
        // grid-template-rows: repeat(7,40vh)
        margin-left: 3vw
        margin-right: 5vw
        +narrowerthan(900px) 
            margin-right 7vw    
        +narrowerthan(700px)
            margin-right 8vw  
        +narrowerthan(550px)
            margin-right 9vw      
        +narrowerthan(450px)
            margin-right 13vw    
    .grid-item 
        ul.genre 
         
            margin-right: 1rem
            li
                // display: inline
                transition: all 200ms ease-out
                font-size: 1.4rem 
                opacity: 65%
                padding 0
                margin-bottom: 0em
                // line-height: 0
                // display inline
                letter-spacing: 0.011em
                font-family: var(--t-std-font)
                +narrowerthan(1000px)
                    font-size: 1.2rem
                +narrowerthan(800px)
                    font-size: 1rem
                em 
                    font-family: var(--q-std-font)
       
        a.proj-title
            z-index 50
            cursor: url(plus.svg) 12.02 12.02, auto

            h1
                line-height 0.85em
                opacity 65%
                margin: 0
                padding: 0
                z-index: 10
                transition: all 200ms ease-out
                font-family: var(--p-std-font)
                font-size: 9vw
                +narrowerthan(1400px)
                    font-size: 10vw
                +narrowerthan(1200px)
                    font-size: 12vw
                +narrowerthan(1000px)
                    font-size: 14vw
                +narrowerthan(800px)
                    font-size: 14vw
                    opacity 100%

                +widerthan(1300px)
                    font-size: 5vw

                // +narrowerthan(700px)
                //     font-size: 20vw
        a.proj-img-link
            cursor: url(plus.svg) 12.02 12.02, auto

            align-content: center
            background-color:  var(--bg-col)    
            // z-index 1
            display: grid
            height 100%

            img
                z-index: 1
                object-fit: cover
                object-position: 50% 50% 
            &::after
                content: ''
                z-index 30
                opacity 0
                background-color: var(--py-col) 
                transition:all 200ms ease-out
                mix-blend-mode: hue   
        &:hover,&:focus,&:active
            a.proj-title
                h1
                    +narrowerthan(500px)
                        color: var(--sy-col) 
                    opacity 100%     

                    // font-family: var(--t-std-font)
            ul.genre
                // grid-column-end: 7; 

                li
                    +narrowerthan(500px)
                        color: var(--sy-col)
                    opacity 100%
                    // font-size: 1.5em
                    // line-height: 1.5em
                    
            a.proj-img-link::after
                opacity 100%   
                // +narrowerthan(500px)
                //     opacity 0
    .grid-item
        cursor: url(plus.svg) 12.02 12.02, auto

        align-items: start 
        display: grid 
        grid-template-columns: repeat(18,1fr)
        grid-template-rows:repeat(15, minmax(auto, 15rem)  )
        +widerthan(1300px)
            grid-template-rows:repeat(10, minmax(auto, 15fr)  )

            &:nth-child(2n+2)
                grid-column: 2/span 2
                 
            &:nth-child(2n+1)
                grid-column: 1/span 2


        a.proj-title

            grid-column: 1/span all
            grid-row: 1/3
            h1
                height: 100%
        a.proj-img-link
            grid-column:7/span all
            display: grid
            grid-row: 2/span all 
            overflow hidden 

            img
                grid-row: 1/-1
                grid-column: 1/-1
                
                object-fit: cover
                width: 100%
                height auto
            &::after
                grid-row 1/-1
                grid-column: 1/-1
        ul.genre
            grid-column-start: span all;
            grid-column-end: 7; 
            grid-row-start 4
            grid-row-end: 8
            text-align: right 
            margin-top: 0
            z-index: 10
            flex-wrap: wrap
            height 100%

            li  
                +narrowerthan(1100px)
                    margin-right: 0
                    display inline
        .hover-overlay
            grid-row 1/-1
            grid-column: 1/-1 
        height 30vmin
        +widerthan(1000px)
            height 20rem
        +widerthan(1500px)
            height 30rem 
    +narrowerthan(500px)
        main
            display: grid
            grid-template-columns: 1
            grid-row repeat(auto,auto)
            grid-gap: 2rem
            margin-bottom: 0rem
            margin: 0
            section.grid-item
                height: auto 
                display: flex
                
                // justify-item: left 
                justify-content:  left 
                a.proj-title
                    margin: 0 1rem 
                    // justify-self: left
                    h1
                        text-align: left
                        font-size: 11vw

                ul.genre
                    margin: 0 1rem

                    height auto
                    text-align: left
                    font-size: 2rem
                    li
                        display inline
                        opacity 75%
                a.proj-img-link
                    height: auto
                img
                    height 100%

