widerthan(var)
    condition = 'screen and (min-width: %s)' % var
    @media condition
        {block}

narrowerthan(var)
    condition = 'screen and (max-width: %s)' % var
    @media condition
        {block}

.index
    main
        grid-template-columns: 1fr
        display: grid
        grid-template-rows: auto
        grid-row-gap: 10vh
        margin-left: 3vw
        margin-right: 5vw

   .grid-item 
        a 
            z-index 1
            h1
                margin: 0
                padding: 0
                z-index: 10
                transition: color 0.3s ease-out
                font-size: 10rem
        a.proj-link
            z-index 1
            display: grid
            img
                z-index: 1
            &::before
                content: ''
                z-index 2
                background: var(--py-col) 
                mix-blend-mode: hue
                opacity 0
                transition: opacity 300ms ease-out
        &:hover
            h1
                color: var(--py-col) 
            a.proj-link
                &::before
                    opacity 1      

    .grid-item
        display: grid
        grid-template-columns: repeat(18,1fr)
        grid-template-rows: repeat(5,20%)
        max-height: 100vh
        a.proj-link
            grid-column:9/19
            grid-row: 1/-1
            display: grid
            max-height: 50vh
            // @media (orientation landscape)
                
            img
                grid-row: 1/-1
                grid-column: 1/-1
            &::before
                grid-row 1/-1
                grid-column: 1/-1
        a
            grid-column: 1/-1
            grid-row: 1/3
            // mix-blend-mode: brighten
        .hover-overlay
            grid-row 1/-1
            grid-column: 1/-1 