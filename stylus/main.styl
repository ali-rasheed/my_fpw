.index
   .grid-item
      overflow: visible
      margin-top: 10vh 
      h1
         margin: 0
         padding: 0
         z-index: 10
         transition: color 0.3s ease-out


         +narrowerthan(--laptopMDPI)
            font-size: 2rem
      a
         display: grid
         grid: 100%/100%
         &::before
            content: ''
            z-index 9
            background: var(--py-col)
            mix-blend-mode: hue
            opacity 0
            transition: opacity 300ms ease-out
      &:hover
         h1
            color: var(--py-col) 
         ::before
            opacity 1

