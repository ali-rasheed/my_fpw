               -webkit-text-fill-color: rgba(255,255,255,0);
               text-shadow: 0px 0px 7px #DB00FF, 0px 0px 12px #DB00FF;
               box-shadow: 0px 0px 7px #DB00FF, 0px 0px 12px #DB00FF;
         &.current
            box-shadow:inset 0px 0px 7px #DB00FF
            border-color: white 
            .glow
