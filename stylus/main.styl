/*
------------------------------------------------ MAIN ---------------------------------
*/
main
   margin-left: 13vw
   margin-right: 13vw
   margin-top: 5vh

   // padding-top: 5vh
   
.index
   .grid-item
      overflow: visible
      margin-top: 10vh 
      h1
         margin: 0
         padding: 0
         z-index: 10
         transition: color 0.3s ease-out


         +narrowerthan(--laptopMDPI)
            font-size: 2rem
      a
         display: grid
         &::before
            content: ''
            z-index 9
            background: pycol
            mix-blend-mode: hue
            opacity 0
            transition: opacity 300ms ease-out
      &:hover
         h1
            color: pycol 
         ::before
            opacity 1

   .hover-overlay
      // background-blend-mode: hue;


