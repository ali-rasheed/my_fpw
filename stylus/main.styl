/*------------DARK MODE------------*/
   [data-theme="dark"] 
      --bg-col: #222222
      --txt-col:#fbfbfb 
 
/*
------------------- MEDIA QUERY MIXINS -------------------
*/
   widerthan(var)
      condition = 'screen and (min-width: %s)' % var
      @media condition
         {block}

   narrowerthan(var)
      condition = 'screen and (max-width: %s)' % var
      @media condition
         {block}
    
/*------------------- ACCESSIBILITY -------------------*/
   .elmnt-invis 
      position: absolute !important;
      height: 1px; width: 1px; 
      overflow: hidden;
      clip: rect(1px 1px 1px 1px); /* IE6, IE7 */
