
pycol = var(--py-col)
sycol = var(--sy-col)
textcol = var(--txt-col)

pfont = var(--p-std-font)
sfont = var(--s-std-font)
tfont = var(--t-std-font)
qfont = var(--q-std-font)
/*------------------- MEDIA QUERY MIXINS -------------------
*/
widerthan(var)
   condition = 'screen and (min-width: %s)' % var
   @media condition
      {block}

narrowerthan(var)
   condition = 'screen and (max-width: %s)' % var
   @media condition
      {block}
    
/*------------------- ACCESSIBILITY -------------------*/
.elmnt-invis 
   position: absolute !important;
   height: 1px; width: 1px; 
   overflow: hidden;
   clip: rect(1px 1px 1px 1px); /* IE6, IE7 */
   clip: rect(1px, 1px, 1px, 1px);


/*
------------------- RESET DEFAULTS ------------------- */
a
   color: var(--p-col-w)
   text-decoration: none
   
