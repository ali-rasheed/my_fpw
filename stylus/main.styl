////////////////STANDARD GRID///////////////////
   .grid
      // border:1rem 1rem 1rem 1rem solid red 
      display: grid 
      grid-template-columns: repeat(auto-fill, minmax(50px, 1fr));
      img 
         object-fit: cover;
      #topNav 
         grid-template-columns:  repeat(auto-fill, minmax(100px,1fr));
         grid-auto-flow: column 
      .charette
         grid-template-columns: repeat(12, 1fr)
   .proj-sect
      display: grid

      grid-column: 1/-1
//////////////////NAV/////////////////
   header 
      position: fixed
      width 100%
      transition: top 0.5s;
      transition-delay: 1s;
   nav
      font-weight: sStdWt      
      padding 2rem
      padding-top: 1.5rem
      z-index 2
      width: 100%
      #nav-name
         grid-column: 1/5
         order 0
         &:hover
            -webkit-text-stroke: 0.5px white;
            -webkit-text-fill-color: rgba(255,255,255,0);
            text-shadow: 0px 0px 7px #DB00FF, 0px 0px 12px #DB00FF;
      .nav-item
         text-align: center
         font-size: 1.2rem
         order: 0
         margin-bottom: auto
         &:hover
            -webkit-text-stroke: 0.5px white;
            -webkit-text-fill-color: rgba(255,255,255,0);
            text-shadow: 0px 0px 7px #DB00FF, 0px 0px 12px #DB00FF;
      #adjust
         order: 1
      h1
         font-size: 1.3rem
         margin 0
         font-weight: normal
      h2 
         margin 0
         font-weight: normal
         font-size: 0.9rem 
      a 
         &:not(:first-child):not(:last-child)
            display none
         &.icon
            display block
            grid-column: -1/-2 
            vertical-align: top
            position: relative
            margin-left: auto
            margin-top: 0
            -webkit-transform: rotate(0deg)
            -moz-transform: rotate(0deg)
            -o-transform: rotate(0deg)
            transform: rotate(0deg)
            -webkit-transition: .5s ease-in-out
            -moz-transition: .5s ease-in-out
            -o-transition: .5s ease-in-out
            transition: .5s ease-in-out
            cursor: pointer
            min-width 2rem
            $hamburger = 4px
            span
               display: block
               position: absolute
               height: $hamburger
               width: 2rem
               background:$secondaryCol
               border-radius: 1px
               opacity: 1
               left: 0
               -webkit-transform: rotate(0deg)
               -moz-transform: rotate(0deg)
               -o-transform: rotate(0deg)
               transform: rotate(0deg) 
               -webkit-transition: .25s ease-in-out
               -moz-transition: .25s ease-in-out 
               -o-transition: .25s ease-in-out
               transition: .25s ease-in-out
               &:nth-child(1) 
                  top: 0px
               &:nth-child(2) 
                  top: $hamburger*2
               &:nth-child(3)
                  top: $hamburger*4
            &.open 
               span:nth-child(1) 
                  top: $hamburger*2;
                  -webkit-transform: rotate(135deg)
                  -moz-transform: rotate(135deg)
                  -o-transform: rotate(135deg)
                  transform: rotate(135deg)
               span:nth-child(2) 
                  opacity: 0;
                  left: 60px
               span:nth-child(3)
                  top: $hamburger*2;
                  -webkit-transform: rotate(-135deg)
                  -moz-transform: rotate(-135deg)
                  -o-transform: rotate(-135deg);
                  transform: rotate(-135deg)
      &.responsive.grid 
         a 
            float none
            text-align left
            &:not(:first-child):not(:last-child) 
               display: block !important
            &.icon
               i.fa.fa-times
                  display: block !important
               i.fa.fa-bars
                  display none !important 
   #btn-cont 
      padding-left: 5%
      padding-right: 5%
      button
         border-width: 2px 
         color:$unselectedCol
