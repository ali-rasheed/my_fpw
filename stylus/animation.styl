@keyframes changeLetterToDark 
  0% 
    content: "\f1d1";
  50% 
    color magenta
  
  100% 
    content: "\f50e";
  

@keyframes changeLetterToLight 
  0% 
    content: "\f50e";
  50% 
    color: magenta
  100% 
    content: "\f1d1";  

@keyframes leaves
  0%
    transform: scale(0.1);
    opacity 0%
  35%
    opacity 60%
  80%
    opacity 95%
  100% 
    transform: scale(2.0);    
    opacity: 100%

