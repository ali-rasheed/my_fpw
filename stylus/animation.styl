
@keyframes leaves
  0%
    transform: scale(0.1);
    opacity 0%
  35%
    opacity 70%
  80%
    opacity 95%
  100% 
    transform: scale(2.0);    
    opacity: 100%

@keyframes slideInLeft {
  0% {
    transform: translateX(-100%);
  }
  100% {
    transform: translateX(0);
  }
}

@keyframes imageSlide
  0%
    transform: translateY(-50%)
  100%
    transform: translateY(0)