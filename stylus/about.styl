widerthan(var)
   condition = 'screen and (min-width: %s)' % var
   @media condition
      {block}

narrowerthan(var)
   condition = 'screen and (max-width: %s)' % var
   @media condition
      {block}

main#about
    margin-top: 10rem  
    grid-template-columns: 1fr 4fr 1fr
    +widerthan(1200px)
        grid-template-columns: repeat(6, 1fr)

    .about-copy 
        // grid-column: 1/3
    
        grid-column: 2/3
        +widerthan(1200px)
            grid-column: 2/5
        // +widerthan()
        margin-bottom: 1rem
        grid-row-end:  span 1  



    h1 
        margin 0 0 .2em 0
        line-height: 1
        +narrowerthan(1000px)
            margin-top: 1rem


    p, li
        max-width 55ch 
    ul 
        list-style-position: inside;
        li
            line-height: 1.5
    
    .profile
        grid-row 1/5
        grid-column 2/4

        +narrowerthan(1000px)
            grid-row 1/span 1

        figure
            display: flex
            align-content: top
            width: 100% 

            img 
                // width: 55ch
                max-width 100%
                justify-self: start
                margin 0
            figcaption
                margin-left: 0
            +narrowerthan(1400px)
                img
                    object-fit: cover

    .email
        // font-size: 
        line-height: 1.45
    
