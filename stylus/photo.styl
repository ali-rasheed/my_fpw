widerthan(var)
   condition = 'screen and (min-width: %s)' % var
   @media condition
      {block}

narrowerthan(var)
   condition = 'screen and (max-width: %s)' % var
   @media condition
      {block}

main.gallery
  display: grid
  justify-items: center 
  margin-top: 5rem
  margin-left: 3rem
  margin-right: 3rem
  +narrowerthan(800px)
    margin-left: 1rem
    margin-right: 1rem
  //   margin-top: -8rem
  img.grid-image
    &:hover
        cursor: url(trg.svg) 16 16, auto
        // filter contrast(1.2)
        transition: filter ease-out 200ms 
  section#portfolioContainer
    a
      // margin 2px   
      // transition: width 150ms ease
      // margin-right: 0 
      // margin-left: 0
      // width 30vmin  
      &.zoomable
        transition: transform 250ms ease
        &:hover, &&:focus
          // transform: scale(1.5);
          z-index 200
      max-width 95vmin

      img
        display: block
        padding-bottom: 15px
        object-fit: cover   
   
        max-width:100%;
        max-height:100%;
  #portfolioFilter
    box-sizing: border-box
    // position: sticky
    z-index: 35
    top: 3rem 
    padding-top: 0.2rem
    padding-bottom: 0.2rem
    display: flex
    margin-left: 0%
    margin-right: 0%
    margin-bottom: .5rem
    flex-wrap: wrap
    justify-content: center
    input[type=radio] 
      // margin 1rem
      display: none 
    label
      margin 0.3rem
      font-size: 0.9vw
      +narrowerthan(1500px)
        font-size: 1.05vw
      +narrowerthan(1400px)
        font-size: 1.3vw
      +narrowerthan(1200px)
        font-size: 1.4vw 
        font-size: 0.9rem

  #slider-cont
    padding: 0.5rem
    margin: 1rem 0rem 0.5rem 0rem 
    z-index: 35
    justify-content: center
    align-content: center
    display: flex
    #col-slider
      position: inherit
      width: 50vw
      +narrowerthan(800px)
        width: 80vw
      +narrowerthan(500px)
        width: 100%

