widerthan(var)
    condition = 'screen and (min-width: %s)' % var
    @media condition
        {block}

narrowerthan(var)
    condition = 'screen and (max-width: %s)' % var
    @media condition
        {block}
#posterjam
    margin-left: 4vw
    margin-right: 4vw
    grid-gap: 1rem
    
    h1
        font-size: 9rem
        z-index 2

        +narrowerthan(1300px)  
            font-size: 10vw     

        +narrowerthan(800px)   
            font-size: 13vw

        +narrowerthan(500px)   
            font-size: 15vw
    h2,h3,p, h4
        margin: 0
        width: 100%
        +widerthan(1080px)
            margin-left: 5vw
    h2 
        font-size:  3.25rem

        +narrowerthan(900px)
            font-size: 2.5rem  

    h3
        font-size: 2.25rem

        +narrowerthan(900px)
            font-size: 1.8rem
    p
        
        margin-right: 50rem
        font-size: 0.98rem

    +narrowerthan(1550px)
        margin-left: 2vw
        margin-right: 2vw
        margin-top: 4rem
    +narrowerthan(1000px)
        margin-right: 8vw
        margin-left: 8vw

    figure.img-cont
        margin: 1rem 0.75rem 1rem 0.75rem
        width: auto
        height auto
        flex-wrap: wrap
        
        +narrowerthan(700px)
            display: flex
        justify-content: center
        justify-items: center

        figcaption 
            flex-basis: 100% 
            flex-grow: 2
            // width: 30rem
            margin-top:  0.5rem
            max-width 30rem
        img
            flex-basis: 10%
            flex-grow: 1
            object-fit: contain
            // width: 100%
            height 100vh    
            min-height: 70vmin 
            
        figcaption 
            // text-align: center
            width: 100%
            margin-top:  0.5rem

    figure.crl
        margin: 1rem 0 2rem 0
        // flex-wrap: wrap     
        div
            display: flex
        figcaption 
            // text-align: center
            width: 100%
            margin-top:  0.5rem

        img
            // flex-basis: 10%
            // flex-grow: 1
            object-fit: cover   
            // width: 100%
            // height auto
            max-width: 100%
            max-height: 100%
            display: block 
            margin-left: auto
            margin-right: auto
            height 75vmin    

        // display: inline-block
        // align-self: center
        // flex-basis:min-content
        // width: 50vmin
        // height: auto 
        // box-sizing: content-box
        // margin: auto 0

        // width 100%  
        // flex-shrink: 2
        // max-width 100%
        // min-width auto
        // max-width 100vw
        .manual-swipe    
            // flex-basis: 100%
            // width: 100%
            // flex-grow: 1
            .img
                // display: flex
                // width: max-content
                // img
                    // object-fit:  contain   
                    // width: auto
                    // height 75vh
                // flex-basis: 10%
                // flex-grow: 1
                // height auto
                // max-width: 100%
                // max-height: 100%
                // display: block
                // margin-left: auto
                // margin-right: auto
    section 
        justify-content: center
        display: grid
        flex-wrap: wrap
        margin-bottom: 2rem
        overflow: none
        grid-gap: 1rem
        p
            align-self: start 
            margin-top: 0
    #posterjam #overview
        display: grid

        #cover-image
            grid-row: 1/span 1
            grid-column: 8/18
            margin: 0
            height: 100%
            
        h1
            grid-column: 2/span all
            margin 0
            align-self: end
            height: min-content
            display inline
            width: 100%
        h2
            margin-top: 3rem

        #summary, h3
            grid-column: 2/span 6
            grid-column-start: 4
        
            +narrowerthan(1850px)
                grid-column-end: span 8
        +narrowerthan(1000px)
            .main-heading,#summary,h2,h3
                grid-column-start:1
            #summary,h2,h3
                grid-column-end: span 10
            #cover-image
                grid-column-end: 19
        +narrowerthan(850px)
            .main-heading,#summary,h2,h3
                grid-column-start:1
            #summary,h2,h3
                grid-column-end: span all
            #cover-image
                grid-column-end: 19
                grid-column-start: 1
    iframe
        min-height: 25rem
        width 100%
  
    h2, h3,h4
        grid-column-end: span 10
        +narrowerthan(1000px)
            grid-column-end: span 8
        +narrowerthan(900px) 
            grid-column-end: span 10 
        +narrowerthan(850px)
            grid-column-end: span all

    h2,h3,h4,p,figure, #hierarchy div , div, ul,ol,iframe
        &.l-sect    
            grid-column-start: 2
        &.ml-sect
            grid-column-start: 4
        &.m-sect
            grid-column-start: 7
        &.mr-sect
            grid-column-start: 9
        &.r-sect
            grid-column-start: 11
        +narrowerthan(1000px)
            &.l-sect    
                grid-column-start: 1
            &.ml-sect
                grid-column-start: 3
            &.m-sect
                grid-column-start: 6
            &.mr-sect
                grid-column-start: 10
            &.r-sect
                grid-column-start: 12
        +narrowerthan(900px)   
            &.l-sect    
                grid-column-start: 1
            &.ml-sect
                grid-column-start: 1
            &.m-sect
                grid-column-start: 4
            &.mr-sect
                grid-column-start: 9
            &.r-sect
                grid-column-start: 9  
    +narrowerthan(850px)
        h3,h4,p,figure, #hierarchy div , div, ul,ol,iframe
            &.l-sect,    
            &.ml-sect,
            &.m-sect,
            &.mr-sect,
            &.r-sect
                grid-column-start: 2
    +narrowerthan(650px)
        h2,h3,h4,p,figure, #hierarchy div , div, ul,ol,iframe
            &.l-sect    
            &.ml-sect
            &.m-sect
            &.mr-sect
            &.r-sect
                grid-column-start: 1
 
    .l-sect
    .r-sect
    .ml-sect
    .m-sect
    .mr-sect
        grid-column-end: span 6

    +narrowerthan(1300px) 
            .l-sect
            .ml-sect
            .m-sect
            .mr-sect
                grid-column-end: span 7
            .r-sect
                grid-column-end: all
    +narrowerthan(1000px) 
            .l-sect
            .ml-sect
            .m-sect
            .mr-sect
                grid-column-end: span 7

    +narrowerthan(850px)
        .l-sect, .ml-sect, .m-sect, .mr-sect, .r-sect
            grid-column-end: span 12
    +narrowerthan(650px)
        .l-sect, .ml-sect, .m-sect, .mr-sect, .r-sect
            grid-column-end: span all
            padding-right: 1rem 