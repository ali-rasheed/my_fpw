widerthan(var)
    condition = 'screen and (min-width: %s)' % var
    @media condition
        {block}

narrowerthan(var)
    condition = 'screen and (max-width: %s)' % var
    @media condition
        {block}
#posterjam
    
    margin-left: 4vw
    margin-right: 4vw
    grid-gap: 1rem
    
    h1
        font-size: 9rem
        z-index 2

        +narrowerthan(1300px)  
            font-size: 10vw     

        +narrowerthan(800px)   
            font-size: 13vw

        +narrowerthan(500px)   
            font-size: 15vw
    h2,h3,p, h4
        margin: 0
        width: 100%
        +widerthan(1400px)
            margin-left: 5vw
    h2 
        font-size:  3.25rem

        +narrowerthan(900px)
            font-size: 2.5rem  

    h3
        font-size: 2.25rem

        +narrowerthan(900px)
            font-size: 1.8rem
    p
        
        margin-right: 50rem
        font-size: 0.98rem

    +narrowerthan(1500px)
        margin-left: 2vw
        margin-right: 2vw
        margin-top: 4rem
    +narrowerthan(1000px)
        margin-right: 8vw
        margin-left: 8vw

    figure.img-cont
        margin: 1rem 0.75rem 1rem 0.75rem
        width: auto
        height auto
        flex-wrap: wrap
        
        +narrowerthan(700px)
            display: flex
        justify-content: center
        justify-items: center

        figcaption 
            flex-basis: 100% 
            flex-grow: 2
            // width: 30rem
            margin-top:  0.5rem
            max-width 30rem
        img
            flex-basis: 10%
            flex-grow: 1
            object-fit: contain
            // width: 100%
            height 100vh    
            min-height: 70vmin 
            
        figcaption 
            // text-align: center
            width: 100%
            margin-top:  0.5rem

    figure.crl
        margin: 1rem 0 2rem 0
        // flex-wrap: wrap     
        div
            display: flex
        figcaption 
            // text-align: center
            width: 100%
            margin-top:  0.5rem

        img
            // flex-basis: 10%
            // flex-grow: 1
            object-fit: cover   
            // width: 100%
            // height auto
            max-width: 100%
            max-height: 100%
            display: block 
            margin-left: auto
            margin-right: auto
            height 75vmin    

