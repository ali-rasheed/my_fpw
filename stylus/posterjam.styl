#posterjam

    // margin-left: 4vw
    // margin-right: 4vw 
    grid-gap: 1rem

    +narrowerthan(1550px)
        margin-left: 2vw
        margin-right: 2vw
        margin-top: 4rem
    +narrowerthan(1000px)
        margin-right: 8vw
        margin-left: 8vw
    figure
    h2,h3
        margin: 0
    figure 
        img
            width: 100%   

    
    section 
        margin-bottom: 2rem
        overflow: none
        grid-gap: 1rem
        p
            margin-top: 0

  .l-sect,.r-sect,.ml-sect,.mr-sect,.m-sect
        align-self: end
  
    h2, h3,h4
        grid-column-end: span 10
        +narrowerthan(1000px)
            grid-column-end: span 8
        +narrowerthan(900px) 
            grid-column-end: span 10 
        +narrowerthan(850px)
            grid-column-end: span all



    h2,h3,h4,p,figure, #hierarchy div , div, ul,hr
        &.l-sect    
            grid-column-start: 2
        &.ml-sect
            grid-column-start: 4
        &.m-sect
            grid-column-start: 7
        &.mr-sect
            grid-column-start: 9
        &.r-sect
            grid-column-start: 11
        +narrowerthan(1000px)
            &.l-sect    
                grid-column-start: 1
            &.ml-sect
                grid-column-start: 3
            &.m-sect
                grid-column-start: 6
            &.mr-sect
                grid-column-start: 10
            &.r-sect
                grid-column-start: 12
        +narrowerthan(900px)   
            &.l-sect    
                grid-column-start: 1
            &.ml-sect
                grid-column-start: 1
            &.m-sect
                grid-column-start: 4
            &.mr-sect
                grid-column-start: 9
            &.r-sect
                grid-column-start: 9  
        +narrowerthan(850px)
            &.l-sect,    
            &.ml-sect,
            &.m-sect,
            &.mr-sect,
            &.r-sect
                grid-column-start: 2
        +narrowerthan(650px)
            &.l-sect    
            &.ml-sect
            &.m-sect
            &.mr-sect
            &.r-sect
                grid-column-start: 1
    p, #hierarchy div, div, ul
        &.l-sect
            grid-column-end: span 6
        &.r-sect
            grid-column-end: span 6
        &.ml-sect
            grid-column-end: span 6
        &.m-sect
            grid-column-end: span 6 
        &.mr-sect
            grid-column-end: span 6

    +narrowerthan(1300px) 
        p           
            &.l-sect
            &.r-sect
            &.ml-sect
            &.m-sect
            &.mr-sect
                grid-column-end:  span 7
    +narrowerthan(1000px)
        p 
            &.l-sect
                grid-column-end: span 7
            &.r-sect
                grid-column-end: span 7
            &.ml-sect
                grid-column-end: span 8
            &.m-sect
                grid-column-end: span 7
            &.mr-sect
                grid-column-end: span 7
    +narrowerthan(900px)
        p 
            &.l-sect
            &.r-sect
            &.ml-sect
            &.m-sect
            &.mr-sect
                grid-column-end: span 9 
    +narrowerthan(850px)
        p,ul,div  
            &.l-sect
            &.r-sect
            &.ml-sect
            &.m-sect
            &.mr-sect
                grid-column-end: span 12   
    +narrowerthan(650px)
        p  
            &.l-sect
            &.r-sect
            &.ml-sect
            &.m-sect
            &.mr-sect
                grid-column-end: span 15 
    +narrowerthan(650px)
        p,ul,div  
            &.l-sect
            &.r-sect
            &.ml-sect
            &.m-sect
            &.mr-sect
                grid-column-end: span 17
    aside
        p
            &.l-sect
            &.r-sect
            &.ml-sect
            &.m-sect
            &.mr-sect
                grid-column-end: span 4
        

    figure.l-sect 
    figure.r-sect
    figure.ml-sect
    figure.mr-sect
        grid-column-end: span 7
    figure.m-sect 
        grid-column-end span 8
        grid-column-start: 6
    +narrowerthan(900px)
        figure.l-sect 
        figure.r-sect
        figure.ml-sect
        figure.mr-sect
            grid-column-end: span 10
        figure.m-sect 
            grid-column-end span 10
            grid-column-start: 5
        // figure.r-sect 
            // grid-column-start: 11 
    +narrowerthan(850px)
        figure.l.sect
        figure.r-sect
        figure.ml-sect
        figure.mr-sect
        figure.m-sect 
            grid-column-start: 2
            grid-column-end: 18
    +narrowerthan(650px)
        figure.l-sect
        figure.r-sect
        figure.ml-sect
        figure.mr-sect
        figure.m-sect 
            grid-column-start: 1
            grid-column-end: 19

