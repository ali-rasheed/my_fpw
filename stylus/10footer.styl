widerthan(var)
    condition = 'screen and (min-width: %s)' % var
    @media condition
        {block}

narrowerthan(var)
    condition = 'screen and (max-width: %s)' % var
    @media condition
        {block}

footer 
  position: relative 
  margin-top: 5rem
  +narrowerthan(500px)
    margin-top: 0
  +widerthan(1300px)
    margin-top: 2rem
  padding-bottom: var(--space) 
  padding-top: 3rem
  // margin-bottom: 1rem
  bottom: 0
  width: 100%
  z-index: 1
  // margin-rig ht: 10vw
  ul 
    border-top:  1px solid var(--txtcol)
    margin 1rem var(--d-space)

    // margin: 0 0.5rem 
    // padding-left: var(--side-margin)
    display: flex 

    justify-content: space-between;
    flex-wrap: wrap
    z-index: inherit
    li
      gap: calc(.25*var(--side-margin))
      align-items: baseline

      z-index: inherit
      font-size: .9rem 
      margin 0
      padding-top: .5em
      +narrowerthan(500px)
        font-size: 0.95rem
        flex-basis: 100%
        // margin: .3rem 
      line-height: initial
      flex-wrap: wrap

      em
        color var(--pcol)  

      
      .fa,.fab,.fas
        font-size: 1.5rem 
        &:hover, &&:focus
          color: var(--tcol) 

      a,button
        align-self: center
        // color: var(--bgcol)
        // margin 0rem 1rem 

        +narrowerthan(500px)
          margin .3rem .4rem 

a
  &.fad, &.fas, &.fab
    cursor: url(ex.svg) 30 30, auto


  hr
    // height: 1px
