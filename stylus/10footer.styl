widerthan(var)
    condition = 'screen and (min-width: %s)' % var
    @media condition
        {block}

narrowerthan(var)
    condition = 'screen and (max-width: %s)' % var
    @media condition
        {block}

footer 
  position: relative 
  margin-top: 5rem
  +narrowerthan(500px)
    margin-top: 0
  +widerthan(1300px)
    margin-top: 2rem
  padding-bottom: 1rem   
  padding-top: 3rem
  margin-bottom: 1rem
  bottom: 0
  width: 100%
  text-align: center
  z-index: 1
  margin-right: 10vw
  justify-content: center 
  align-items: center
  ul 

    margin: 0 0.5rem 
    display: flex 
    justify-content:   center
    flex-wrap: wrap
    z-index: inherit
    li
      z-index: inherit
      font-size: 1rem 
      margin 0.5rem 
      padding 0
      +narrowerthan(500px)
        font-size: 0.95rem
        flex-basis: 100%
        // margin: .3rem 
      line-height: initial
      flex-wrap: wrap
      justify-content: center

      em
        color var(--pcol)  

      
      .fa,.fab,.fas
        font-size: 1.5rem 
        &:hover, &&:focus
          color: var(--tcol) 

      a,button
        align-self: center
        // color: var(--bgcol)
        margin 0rem 1rem 

        +narrowerthan(500px)
          margin .3rem .4rem 

