////////////////GLOBAL GRID 
.flex-b
    display: flex

.grid
    display: grid

/////////////NAV POSITIONING
nav
    box-sizing: border-box
    z-index 20
    #nav-name
        left: 0
        height: 100%
        position: fixed
    #adjuster-cont
        position: fixed
        top: 0
        right: 0
        left: 0
        width: 100%
        display: flex
        align-items: center
        justify-content: center
        height: 3rem
    #nav-cont
        position fixed
        right: 0
        display: flex

        flex-direction: column
        height: 100%
        // align-items: center
        justify-content: center
        flex-wrap: nowrap
        max-width 10vw
        .nav-item
            transform: rotate(180deg)
            // flex-shrink: 1


.index .grid-item
    display: grid
    grid-template-columns: repeat(18,1fr)
    grid-template-rows: repeat(5,20%)
    max-height: 100vh
    a
        grid-column:10/-1
        grid-row: 1/-1
        display: grid
        grid: 100%/100%
        img 
            grid-row: 1/-1
            grid-column: 1/-1
        &::before
            grid-row 1/-1
            grid-column: 1/-1
            z-index 11
    

    h1
        grid-column: 1/-1
        grid-row: 1/3
        mix-blend-mode: brighten
    .hover-overlay
        grid-row 1/-1
        grid-column: 1/-1

.index main
    display: grid
    // grid-row-gap: 5rem

main.about
    grid-template-columns:  repeat(18,minmax(50px,1fr))
    grid-template-rows: repeat(10,10%)
    min-height: 80vh
    
    ul
        grid-column: 1/8
