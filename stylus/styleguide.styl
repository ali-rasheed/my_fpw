.styl-gd
    h1.main-heading
        text-align: center;
    h2 
        grid-column: 2/span all !important
    div
        h1.main-heading
            text-align: left 
    #palette
        width: 100%
        display: flex
        text-align: center
        margin-left: auto 
        margin-right: auto  
        align-content: center
        // align-items: center;
        justify-content: center; 
        grid-template-columns: 1fr 1fr 1fr 
        grid-column: 1/span all
        grid-column-gap: 10vw
    h1:first-child
        text-align: center
    .pal-col
        margin: 1rem
        border solid grey 3px
        width: 15vw
        height 15vw
        h1,h2,h3,h4,h5,h6
            margin-top: 0
            margin-bottom: 0.4em
        &:first-child
            background-color: var(--magenta)
        &:last-child
            background-color: var(--black)
        &:nth-child(2)
            background-color: var(--white)
    #hierarchy
        h1, h2, h3, p
            margin-bottom 0.2em