widerthan(var)
    condition = 'screen and (min-width: %s)' % var
    @media condition
        {block}

narrowerthan(var)
    condition = 'screen and (max-width: %s)' % var
    @media condition
        {block}


nav 
   font-weight: 300
   z-index 40
   .nav-item
      // mix-blend-mode: difference
   a[name = "side-nav"], #nav-h2
      // opacity 0
   #side-nav
      opacity 0 
      transition: all .2s ease-out
   #nav-name
      // display: flex
      // justify-content: flex-end
      z-index inherit
      // position: fixed
      // right: 0 
      // top 0
      // width: 100vw 
      text-align: center
      overflow-wrap: none
      white-space: nowrap;
      // writing-mode: vertical-rl
      // transform: rotate(180deg)
      padding:0rem
      margin-right: 5vw
      margin-top: 1.5em
      margin-bottom: 2em
      // max-width 100%
      text-align: right 
      #nav-h1
         a
            // font-family: var(--p-std-font)
            font-size: 1.3rem;
            text-align: right
            font-weight: 400
         

      #nav-h2
         // font-family: sfont
         min-width 1rem
         margin: 0
         // font-family: var(--p-std-font)
         // font-weight: 400
         font-size: 1.15rem
         text-align: right 



   input#adjust[type=checkbox]
      display: none;  /* to hide the checkbox itself */

   input[type=checkbox]#adjust+ label:before
      display: inline-block;

      letter-spacing: 10px;
      font-family: "Font Awesome 5 Brands";
      font-size: 1.2em;
      content: "\f1d1"

      transform: rotate(90deg)
      color: var(--txt-col)
      height: 1em
      // width: 1em
      margin-bottom: .4rem

      &:hover 
         color: var(--py-col)
   input[type=checkbox]#adjust:checked + label:before
      letter-spacing: 5px 
      font-family: "Font Awesome 5 Brands";
      content: "\f50e"

   input[type=checkbox]#adjust + label::after
      content: "Dark Side"
      color: var(--txt-col)
      &:hover 
         color: var(--py-col)

   input[type=checkbox]#adjust:checked + label::after
      content: "Light Side"
      &:hover 
         color: var(--py-col)
      
   input[type=checkbox]#adjust:checked + label:hover::before ,  input[type=checkbox]#adjust:checked + label:hover::after
   input[type=checkbox]#adjust + label:hover::before ,  input[type=checkbox]#adjust + label:hover::after
      color: var(--py-col)

   label#modeLbl
      display: flex
      justify-content: space-between
 
 /*--------------positioning------------------*/
   box-sizing: border-box
   #nav-name
      // left: 0
      // height: 100%
      // position: fixed
      // top: 0

   #nav-cont
      box-sizing: border-box
      position: fixed
      top: 0
      right: 0
      // left: 0
      bottom: 0rem
      margin 1rem
      +narrowerthan(450px)
         margin-right: 0.9rem
      +narrowerthan(375px)
         margin-right: 0.8rem
   
      display: flex
      align-items: center
      justify-content: space-between
      max-height: 100vh
      max-width: 100%
      writing-mode: vertical-rl
      box-sizing: border-box
      font-size 1.15rem
