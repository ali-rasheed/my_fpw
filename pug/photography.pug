mixin img-lazyloaded-lg(name,sequence)
  a(class=name+" img-cont element-item p-tilt" data-groups=name data-lightbox=name href="imgs/photography-lg/"+name+"/" + sequence +".jpg") 
    img(class="lazy photo-img", data-src="imgs/photography-sm/"+name+"/"+sequence+".jpg" src="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 3 2'%3E%3C/svg%3E") 


